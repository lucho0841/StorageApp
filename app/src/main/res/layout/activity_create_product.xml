<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center">



    <EditText

        android:id="@+id/Nombre_Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre de Producto"
        android:textAlignment="center"/>

    <EditText

        android:id="@+id/Codigo_Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Código de Producto"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/Cantidad_Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cantidad de Producto"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/Descripcion_Producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Descripción de Producto"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/red"/>


    </LinearLayout>



</LinearLayout>